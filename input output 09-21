package InputOutput;

/**
 *
 * @author raymondiosorno
 */
import java.io.BufferedReader; //read text from file
import java.io.InputStreamReader; //same
import java.io.InputStream; //same

public class PhotoInfoFiles {
    public static void main(String[] args) {
        // Load the file ParkPhotos.txt from the resources folder
        InputStream input = PhotoInfoFiles.class.getResourceAsStream("/ParkPhotos.txt");  //opens file from resource folder

        if (input == null) { //if the file isnt found it will print this
            System.out.println("File not found.");
            return;
        }

        try {
            BufferedReader br = new BufferedReader(new InputStreamReader(input)); //creates buffer to read txt line by line
            String line = br.readLine(); //reads first line 

            while (line != null) { //continuos loop until all lines are read
                // Replace the ending
                String newName = line.replace("_photo.jpg", "_info.txt"); //replaces ending of name
                System.out.println(newName);// prints new name

                // Read the next line
                line = br.readLine();
            }

            br.close(); // closes reader when its done
        } catch (Exception e) { //prints error message 
            System.out.println("Error reading file."); // the message
        }
    }
}
